<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".intent2">

        <TextView
                android:id="@+id/tVndwur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIlAI MAHASISWA"
                android:textAlignment="center"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/tVnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:text="NIM             :"
                android:textSize="18sp"/>
        <TextView
                android:id="@+id/tVnim1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tVnim"
                android:layout_alignBaseline="@id/tVnim"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/tVnama1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVnim1"
                android:layout_marginLeft="10dp"
                android:text="NAMA         :"
                android:textSize="18sp"
        />
        <TextView
                android:id="@+id/tVnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tVnama1"
                android:layout_alignBaseline="@id/tVnama1"
                android:layout_marginLeft="120dp"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/tVnilai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVnama1"
                android:layout_marginLeft="10dp"
                android:text="Nilai Angka :"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/tVnilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tVnilai1"
                android:layout_alignBaseline="@id/tVnilai1"
                android:layout_marginLeft="120dp"
                android:textSize="18sp"
        />
        <TextView
                android:id="@+id/tVketerangan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVnilai1"
                android:layout_marginLeft="10dp"
                android:text="Keterangan :"
                android:textSize="18sp"
        />
        <TextView
                android:id="@+id/tVketerangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tVketerangan1"
                android:layout_alignBaseline="@id/tVketerangan1"
                android:layout_marginLeft="120dp"
                android:textSize="18sp" />

</RelativeLayout>